<Window x:Class="ld42.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ld42"
        mc:Ignorable="d"
        Title="S.P.A.C.E., inc." 
        Icon="Resources\img\icon.png"
        Height="320"    Width="500"
        MinHeight="320" MinWidth="500"
        MaxHeight="320" MaxWidth="500"
        Closed="WindowClosed"
        >
    <DockPanel>
        <DockPanel.Background>
            <ImageBrush ImageSource="Resources\img\menuBackground.png"/>
        </DockPanel.Background>

        <TextBlock Text="Theme: Running out of space" Style="{StaticResource menuText}"/>
        <TextBlock Text="Made for ludum dare 42"      Style="{StaticResource menuText}"/>
        <StackPanel Margin="0 65 0 0">
            <Button  Content="Play"         Click="Button_Play"         Style="{StaticResource menuBtn}"/>
            <Button  Content="Hightscores"  Click="Button_Hightscores"  Style="{StaticResource menuBtn}"/>
            <Button  Content="Exit"         Click="Button_Exit"         Style="{StaticResource menuBtn}"/>
        </StackPanel>
    </DockPanel>
</Window>
